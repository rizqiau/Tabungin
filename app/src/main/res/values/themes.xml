<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ones" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorLight</item>
        <item name="android:windowBackground">@color/backgroundColorLight</item>
        <item name="colorSurface">@color/surfaceColorLight</item>
        <item name="colorError">@color/errorColorLight</item>
        <item name="colorOnPrimary">@color/backgroundColorLight</item>
        <item name="colorOnSurface">@color/textPrimaryLight</item>
        <item name="colorOnBackground">@color/textSecondaryLight</item>

        <!-- Text -->
        <item name="android:textColor">@color/textPrimaryLight</item>
        <item name="android:textColorSecondary">@color/textSecondaryLight</item>
        <item name="dividerColor">@color/dividerColorLight</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="Theme.Ones.Splash" parent="Theme.SplashScreen">
        <!-- Latar belakang layar pembuka -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- Ikon animasi untuk layar pembuka -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <!-- Tema yang digunakan setelah layar pembuka -->
        <item name="postSplashScreenTheme">@style/Theme.Ones</item>
    </style>
</resources>